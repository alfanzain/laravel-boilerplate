<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\YourModel;

class YourController extends Controller
{
    /**
     * Display a listing of the resource.
     *
     * @return \Illuminate\Http\Response
     */
    public function index()
    {
        $yourModels = YourModel::all();

        return view('pages.yourview.index', $yourModels);
    }

    /**
     * Show the form for creating a new resource.
     *
     * @return \Illuminate\Http\Response
     */
    public function create()
    {
        return view('pages.yourview.create');
    }

    /**
     * Store a newly created resource in storage.
     *
     * @param  \Illuminate\Http\Request  $request
     * @return \Illuminate\Http\Response
     */
    public function store(YourRequest $request)
    {
        YourModelk::create($request->validated());

        return redirect()->route('yourview.index');
    }

    /**
     * Display the specified resource.
     *
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function show($id)
    {
        $yourModel = YourModel::findOrFail($id);

        return view('pages.yourview.show', $yourModel);
    }

    /**
     * Show the form for editing the specified resource.
     *
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function edit($id)
    {
        $yourModel = YourModel::findOrFail($id);

        return view('pages.yourview.edit', $yourModel);
    }

    /**
     * Update the specified resource in storage.
     *
     * @param  \Illuminate\Http\Request  $request
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function update(YourRequest $request, $id)
    {
        $yourModel = YourModel::findOrFail($id);

        $yourModel->update($request->validated());

        return redirect()->route('yourview.index');
    }

    /**
     * Remove the specified resource from storage.
     *
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function destroy($id)
    {
        $yourModel = YourModel::findOrFail($id);

        $yourModel->delete();

        return redirect()->route('yourview.index');
    }
}
